-- Indo Hangout Auto Fishing GUI v2
-- Loader: loadstring(game:HttpGet("https://raw.githubusercontent.com/USERNAME/REPO/main/indohangout_auto.lua"))()

-- Ambil Orion Library
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

-- Window
local Window = OrionLib:MakeWindow({
    Name = "Indo Hangout | Auto Mancing v2",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "IndoHangoutFishing"
})

-- Variabel
getgenv().AutoMancing = false
getgenv().Delay = 1
local StatusLabel = "OFF"

-- Anti AFK
local vu = game:GetService("VirtualUser")
game:GetService("Players").LocalPlayer.Idled:Connect(function()
    vu:Button2Down(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
    task.wait(1)
    vu:Button2Up(Vector2.new(0,0),workspace.CurrentCamera.CFrame)
end)

-- Cari RemoteEvent Fishing otomatis
local FishingRemote = nil
for _,v in pairs(game:GetService("ReplicatedStorage"):GetDescendants()) do
    if v:IsA("RemoteEvent") and string.lower(v.Name):find("fish") then
        FishingRemote = v
        break
    end
end

-- Tab Main
local MainTab = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- Status Info
MainTab:AddParagraph("Status", "Auto Mancing: "..StatusLabel)

-- Toggle Auto Mancing
MainTab:AddToggle({
    Name = "Auto Mancing",
    Default = false,
    Callback = function(Value)
        getgenv().AutoMancing = Value
        StatusLabel = Value and "ON ✅" or "OFF ❌"
        
        if Value then
            OrionLib:MakeNotification({
                Name = "Fishing Started",
                Content = "Auto Mancing Aktif!",
                Image = "rbxassetid://4483345998",
                Time = 3
            })
            task.spawn(function()
                while getgenv().AutoMancing do
                    pcall(function()
                        if FishingRemote then
                            FishingRemote:FireServer("Cast")
                            task.wait(getgenv().Delay)
                            FishingRemote:FireServer("Reel")
                        end
                    end)
                    task.wait(getgenv().Delay)
                end
            end)
        else
            OrionLib:MakeNotification({
                Name = "Fishing Stopped",
                Content = "Auto Mancing Berhenti.",
                Image = "rbxassetid://4483345998",
                Time = 3
            })
        end
    end
})

-- Slider Delay
MainTab:AddSlider({
    Name = "Delay (detik)",
    Min = 0.5,
    Max = 5,
    Default = 1,
    Color = Color3.fromRGB(255,255,255),
    Increment = 0.1,
    ValueName = "detik",
    Callback = function(Value)
        getgenv().Delay = Value
    end
})

-- Tombol Stop manual
MainTab:AddButton({
    Name = "Stop Auto Mancing",
    Callback = function()
        getgenv().AutoMancing = false
        StatusLabel = "OFF ❌"
        OrionLib:MakeNotification({
            Name = "Stopped",
            Content = "Auto Mancing dimatikan manual.",
            Image = "rbxassetid://4483345998",
            Time = 2
        })
    end
})

-- Info Tab
local InfoTab = Window:MakeTab({
    Name = "Info",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

InfoTab:AddParagraph("Cara Pakai", "1. Klik Auto Mancing\n2. Atur Delay sesuai kecepatan\n3. Bisa Stop kapan saja\n4. Anti-AFK aktif otomatis\n5. RemoteEvent Fishing otomatis terdeteksi")

-- Credits Tab
local CreditsTab = Window:MakeTab({
    Name = "Credits",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

CreditsTab:AddParagraph("Developer", "Script by MouseExploitSec\nGUI by OrionLib\nExecutor: Delta")

-- Start Orion
OrionLib:Init()
